
{# templates/crud_author/show_author_books.html.twig #}

{% extends 'base.html.twig' %}

{% block body %}
    <div class="container">
        <h1 style="text-align: center;">Livres de {{ author.name }}</h1>

        {% if books is empty %}
            <p>Aucun livre trouvé pour cet auteur.</p>
        {% else %}
            <table class="table">
                <thead>
                    <tr>
                        <th>Référence</th>
                        <th>Titre</th>
                        <th>Nombre de Pages</th>
                        <th>Image</th>
                    </tr>
                </thead>
                <tbody>
                    {% for book in books %}
                        <tr>
                            <td>{{ book.ref }}</td>
                            <td>{{ book.title }}</td>
                            <td>{{ book.nbrPages }}</td>
                            <td>
                                {% if book.picture %}
                                    <img src="{{ asset('uploads/' ~ book.picture) }}" alt="{{ book.title }}" style="max-width: 50px;">
                                {% else %}
                                    N/A
                                {% endif %}
                            </td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        {% endif %}

        <a href="{{ path('app_livre') }}" class="btn btn-secondary">Retour à la liste des livres</a>
    </div>
{% endblock %}
