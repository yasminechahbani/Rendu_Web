{% extends 'layout.html.twig' %}

{% block content %}
<h1>All Authors</h1>

{% if authors is defined and authors is not empty %}
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Name</th>
                <th>Picture</th>
                <th>Details</th>
            </tr>
        </thead>
        <tbody>
            {% for author in authors %}
            <tr>
                <td>{{ author.name | upper }}</td>
                <td><img src="{{ asset(author.picture) }}" alt="{{ author.name }}" style="width: 100px;"></td>
                <td><a href="{{ path('author_details', { 'id': author.id }) }}" class="btn btn-primary">More</a></td>
            </tr>
            {% endfor %}
        </tbody>
    </table>
{% else %}
    <p>No authors found.</p>
{% endif %}
{% endblock %}
